	"item": [
		{
			"name": "1. Register New User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Kỹ năng 1: Kiểm tra Status Code\r",
							"pm.test(\"Status code is 201 Created\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"// Kỹ năng 2: Kiểm tra nội dung JSON trả về\r",
							"pm.test(\"Message confirms registration\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.message).to.eql(\"User registered successfully\");\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Tạo ra một username ngẫu nhiên và LƯU NÓ LẠI\r",
							"// để request 'Login' có thể dùng *chính xác* username này.\r",
							"var randomUsername = pm.variables.replaceIn(\"{{NEW_USER}}\");\r",
							"pm.environment.set(\"STABLE_USER\", randomUsername);"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"username\": \"{{STABLE_USER}}\",\r\n    \"password\": \"password123\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{API_URL}}/api/register",
					"host": [
						"{{API_URL}}"
					],
					"path": [
						"api",
						"register"
					]
				}
			},
			"response": []
		},
		{
			"name": "2. Login and Get Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200 OK\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// Kỹ năng 3: Lấy dữ liệu từ response và lưu vào Environment\r",
							"pm.test(\"Token is received and saved\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.token).to.be.a(\"string\"); // Kiểm tra xem token có phải là 1 chuỗi\r",
							"\r",
							"    // LƯU TOKEN VÀO MÔI TRƯỜNG\r",
							"    pm.environment.set(\"AUTH_TOKEN\", jsonData.token);\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"username\": \"{{STABLE_USER}}\",\r\n    \"password\": \"password123\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{API_URL}}/api/login",
					"host": [
						"{{API_URL}}"
					],
					"path": [
						"api",
						"login"
					]
				}
			},
			"response": []
		},
		{
			"name": "3. Get All Books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200 OK\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Book list has 20 items\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.data).to.be.an(\"array\"); // Kiểm tra 'data' là 1 mảng\r",
							"    pm.expect(jsonData.data.length).to.equal(20); // Kiểm tra có đủ 20 cuốn sách\r",
							"});\r",
							"\r",
							"// Kỹ năng 4: Lưu dữ liệu (ID sách) để dùng cho request tiếp theo\r",
							"pm.test(\"Save first book ID\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    var firstBook = jsonData.data[0];\r",
							"    pm.environment.set(\"BOOK_ID\", firstBook.id);\r",
							"    pm.environment.set(\"BOOK_TITLE\", firstBook.title);\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "GET",
				"header": [
					{
						"key": "x-access-token",
						"value": "{{AUTH_TOKEN}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{API_URL}}/api/books?page=1&limit=20",
					"host": [
						"{{API_URL}}"
					],
					"path": [
						"api",
						"books"
					],
					"query": [
						{
							"key": "page",
							"value": "1"
						},
						{
							"key": "limit",
							"value": "20"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "4. Borrow First Book",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201 Created\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"pm.test(\"Record is created for the correct book\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    var expectedTitle = pm.environment.get(\"BOOK_TITLE\"); // Lấy tên sách đã lưu\r",
							"\r",
							"    pm.expect(jsonData.record.book_title).to.eql(expectedTitle);\r",
							"\r",
							"    // Lưu ID của phiếu mượn để trả sách\r",
							"    pm.environment.set(\"RECORD_ID\", jsonData.record.id);\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "x-access-token",
						"value": "{{AUTH_TOKEN}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"book_id\": \"{{BOOK_ID}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{API_URL}}/api/borrow-records",
					"host": [
						"{{API_URL}}"
					],
					"path": [
						"api",
						"borrow-records"
					]
				}
			},
			"response": []
		},
		{
			"name": "5. Return Book",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200 OK\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Message confirms return\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.message).to.include(\"Trả sách\"); // Kiểm tra có chữ \"Trả sách\"\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "PUT",
				"header": [
					{
						"key": "x-access-token",
						"value": "{{AUTH_TOKEN}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{API_URL}}/api/borrow-records/{{RECORD_ID}}?x-access-token={{AUTH_TOKEN}}",
					"host": [
						"{{API_URL}}"
					],
					"path": [
						"api",
						"borrow-records",
						"{{RECORD_ID}}"
					],
					"query": [
						{
							"key": "x-access-token",
							"value": "{{AUTH_TOKEN}}"
						}
					]
				}
			},
			"response": []
		}
	]
}